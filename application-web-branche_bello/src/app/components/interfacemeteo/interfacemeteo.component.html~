<div class="container mt-5">
  <!-- Barre de recherche -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex">
        <input [(ngModel)]="searchQuery" (input)="onSearch()" class="form-control me-2" placeholder="Nom de la ville">
        <button (click)="onSearch()" class="btn btn-primary">Recherche</button>
      </div>
    </div>
  </div>

  <!-- Liste des suggestions de villes -->
  <ul *ngIf="filteredCities.length > 0" class="list-group mb-4">
    <li *ngFor="let city of filteredCities" class="list-group-item" (click)="onCitySelect(city)">
      {{ city.ville }}
    </li>
  </ul>

  <!-- Affichage des données météo pour la ville sélectionnée -->
  <div *ngIf="selectedCity" class="card">
    <div class="card-header">
      <h2>{{ selectedCity.ville }}</h2>
    </div>
    <div class="card-body">
      <p><strong>Station Number:</strong> {{ selectedCity.numeroStation }}</p>
      <p><strong>Longitude:</strong> {{ selectedCity.longitude }}</p>
      <p><strong>Latitude:</strong> {{ selectedCity.latitude }}</p>

      <!-- Affichage des informations météo -->
      <div *ngIf="weatherData">
        <p><strong>Temperature:</strong> {{ weatherData.t }}°C</p>
        <p><strong>Humidity:</strong> {{ weatherData.u }}%</p>

        <!-- Icône météo en fonction de la température -->
        <div class="mt-3">
          <p>{{ weatherData.t }}</p> <!-- Afficher la température pour le débogage -->
          <i *ngIf="weatherData.t > 20" class="iconsoleil">
            <img src="assets/img/soleil.png" alt="Soleil" width="50" height="50">
          </i>
          <i *ngIf="weatherData.t <= 20 && weatherData.t > 0" class="iconnuageux">
            <img src="assets/img/nuageux.png" alt="Nuageux" width="50" height="50">
          </i>
          <i *ngIf="weatherData.t <= 0" class="iconneige">
            <img src="assets/img/flocon-de-neige.png" alt="Neige" width="50" height="50">
          </i>
        </div>
    </div>
    <div class="card-footer">
      <button (click)="viewDetails(selectedCity)" class="btn btn-secondary">Voir plus</button>
    </div>
  </div>

  </div>

  <!-- Affichage de la ville par défaut si aucune ville n'est sélectionnée -->
  <div *ngIf="selectdefault && !selectedCity" class="card mt-4">
    <div class="card-header">
      <h2>{{ selectdefault.ville }}</h2>
    </div>
    <div class="card-body">
      <p><strong>Station Number:</strong> {{ selectdefault.numeroStation }}</p>
      <p><strong>Longitude:</strong> {{ selectdefault.longitude }}</p>
      <p><strong>Latitude:</strong> {{ selectdefault.latitude }}</p>

      <!-- Affichage des informations météo -->
      <div *ngIf="weatherData2">
        <p><strong>Temperature:</strong> {{ weatherData2.t }}°C</p>
        <p><strong>Humidity:</strong> {{ weatherData2.u }}%</p>

        <!-- Icône météo pour la ville par défaut -->
        <div class="mt-3">
          <i *ngIf="weatherData2.t > 20" class="fas fa-3x text-warning"><img src="assets/img/soleil.png" alt="Soleil" width="50" height="50"></i>
          <i *ngIf="weatherData2.t <= 20 && weatherData2.t > 0" class="fas fa-3x text-primary"><img src="assets/img/nuageux.png" alt="Nuageux" width="50" height="50"></i>
          <i *ngIf="weatherData2.t <= 0" class="fas fa-3x text-info"><img src="assets/img/nuageux.png" alt="Neige" width="50" height="50"></i>
        </div>
      </div>
    </div>

    <div class="card-footer">
      <button (click)="viewDetails(selectdefault)" class="btn btn-secondary">Voir plus</button>
    </div>
  </div>
</div>

